@model RESS.Models.Portal.DashboardViewModel

@{
    ViewBag.Title = "Index";
}

<h2 class="smalltitle" >DASHBOARD</h2>
<div class="jumbotron">
    <div class="text-center">

        <div class="row" id="topRow">
            <h3>Property Investment Strategy Analyses</h3>
            <div class="col-xs-6">
                <div class="panel-collapse">
                    <div class="panel-heading">Most Recent Four-Square Analyses</div>
                    <div class="panel-body">
                        <ul>
                            @foreach (var fourSquare in Model.MostRecentFourSqrAnalyses)
                            {
                                <li>
                                    @fourSquare.FourSquareAnalysisId | @fourSquare.Address | @fourSquare.FourSquareDateRan
                                </li>
                            }
                        </ul>
                    </div>
                    <a href="~/FourSquare/Create">Create New Four-Square Analysis</a>
                    <a href="~/Investment/Index">More Property Investment Strategies</a>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="panel-collapse">
                    <div class="panel-heading">Most Recent Net Operating Income Analyses</div>
                    <div class="panel-body">
                        <ul>
                            @foreach (var netOI in Model.MostRecentNOIAnalyses)
                            {
                                <li>
                                    @netOI.NetOperatingIncomeId | @netOI.Address | @netOI.NOIRundate
                                </li>
                            }
                        </ul>
                    </div>
                    <a href="~/NOI/Create">Create New Net Operating Income Analysis</a>
                    <a href="~/Investment/Index">More Property Investment Strategies</a>
                </div>
            </div>
        </div>

        <div class="row">
            <h3>Property Management Analyses</h3>
            <div class="col-xs-3"></div>
            <div class="col-xs-6">
                <div class="panel-collapse">
                    <div class="panel-heading">Most Recent Capitalization Rate Analyses</div>
                    <div class="panel-body">
                        <ul>
                            @foreach (var capRate in Model.MostRecentCapRateAnalyses)
                            {
                                <li>
                                    @capRate.CapitalizationRateAnalysisId | @capRate.Address | @capRate.CapRateRunDate
                                </li>
                            }
                        </ul>
                    </div>
                    <a href="~/CapitalizationRate/Create">Create New Capitalization Rate Analysis</a>
                    <a href="~/Investment/Index">More Property Management Strategies</a>
                </div>
            </div>
            <div class="col-xs-3"></div>
        </div>

        <div>
            <h3 class="headingstyle3" align="center">Quick Actions</h3>
            <p class="buttonstyle" align="center"><a class="btn-link" href="~/Property/Index">Manage Your Properties &raquo;</a></p>
            <p class="buttonstyle" align="center"><a class="btn-link" href="~/Owner/Index">Manage Property Owners &raquo;</a></p>
            <p class="buttonstyle" align="center"><a class="btn-link" href="~/Tenant/Index">Manage Tenants &raquo;</a></p>
        </div>
    </div>
</div>

