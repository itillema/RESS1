@model IEnumerable<RESS.Models.NetOperatingIncome.NetOperatingIncomeListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="smalltitle">All Net Operating Income Analysis Reports</h2>
<div class="jumbotron">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NetOperatingIncomeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NOIRundate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NetOperatingIncomeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOIRundate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PropertyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("View Report", "Details", new { id=item.NetOperatingIncomeId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.NetOperatingIncomeId })
                </td>
            </tr>
        }

    </table>
</div>