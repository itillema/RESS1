@model RESS.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 class="smalltitle">New Account</h2>
<div class="jumbotron">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group" align="center">
            
            <div class="col-lg-12" align="center">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "EMAIL", @style = "border-radius: 6px;" })
            </div>
        </div>
        <div class="form-group" align="center">
            
            <div class="col-lg-12" align="center">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "PASSWORD", @style = "border-radius: 6px;" })
            </div>
        </div>
        <div class="form-group" align="center">
            
            <div class="col-lg-12" align="center">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "CONFIRM PASSWORD", @style = "border-radius: 6px;" })
            </div>
        </div>
        <div class="form-group" align="center">
            <div class="col-lg-12" align="center">
                <input type="submit" class="btn btn-default" value="Create Account" style="border-radius: 6px; background-color: slategray; color:#f1f1f1;" />
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>